@page
@model webapp.Pages.Forms.AttendeeFormModel

@{
    ViewData["Title"] = "Attendee Form";
}

<body>
    <h1>Attendee Form</h1>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Attendee.FirstName" class="control-label"></label>
                    <input asp-for="Attendee.FirstName" class="form-control" />
                    <span asp-validation-for="Attendee.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Attendee.LastName" class="control-label"></label>
                    <input asp-for="Attendee.LastName" class="form-control" />
                    <span asp-validation-for="Attendee.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Attendee.MailAddress" class="control-label"></label>
                    <input asp-for="Attendee.MailAddress" class="form-control" />
                    <span asp-validation-for="Attendee.MailAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Attendee.EmailAddress" class="control-label"></label>
                    <input asp-for="Attendee.EmailAddress" class="form-control" />
                    <span asp-validation-for="Attendee.EmailAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Attendee.PrimaryPhoneNumber" class="control-label"></label>
                    <input asp-for="Attendee.PrimaryPhoneNumber" class="form-control" />
                    <span asp-validation-for="Attendee.PrimaryPhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Attendee.Grade" class="control-label"></label>
                    <input asp-for="Attendee.Grade" class="form-control" />
                    <span asp-validation-for="Attendee.Grade" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Attendee.Gender" class="control-label"></label>
                    <input asp-for="Attendee.Gender" class="form-control" />
                    <span asp-validation-for="Attendee.Gender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Attendee.Ethnicity" class="control-label"></label>
                    <input asp-for="Attendee.Ethnicity" class="form-control" />
                    <span asp-validation-for="Attendee.Ethnicity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</body>