@page
@model webapp.Pages.Forms.SpeakerFormModel

@{
    ViewData["Title"] = "Speaker Form";
}

<body>
    <h1>Speaker Form</h1>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Speaker.FirstName" class="control-label"></label>
                    <input asp-for="Speaker.FirstName" class="form-control" />
                    <span asp-validation-for="Speaker.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Speaker.LastName" class="control-label"></label>
                    <input asp-for="Speaker.LastName" class="form-control" />
                    <span asp-validation-for="Speaker.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Speaker.MailAddress" class="control-label"></label>
                    <input asp-for="Speaker.MailAddress" class="form-control" />
                    <span asp-validation-for="Speaker.MailAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Speaker.PrimaryPhoneNumber" class="control-label"></label>
                    <input asp-for="Speaker.PrimaryPhoneNumber" class="form-control" />
                    <span asp-validation-for="Speaker.PrimaryPhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Speaker.EmailAddress" class="control-label"></label>
                    <input asp-for="Speaker.EmailAddress" class="form-control" />
                    <span asp-validation-for="Speaker.EmailAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Speaker.JobTitle" class="control-label"></label>
                    <input asp-for="Speaker.JobTitle" class="form-control" />
                    <span asp-validation-for="Speaker.JobTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Speaker.Session.SessionTitle" class="control-label"></label>
                    <input asp-for="Speaker.Session.SessionTitle" class="form-control" />
                    <span asp-validation-for="Speaker.Session.SessionTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Speaker.Session.SessionDescription" class="control-label"></label>
                    <input asp-for="Speaker.Session.SessionDescription" class="form-control" />
                    <span asp-validation-for="Speaker.Session.SessionDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</body>